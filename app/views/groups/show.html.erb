<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <div class="row">
    		<h2>Group Detail</h2>
    		<table class='table table-hover table-inverse'>
    		  <thead>
    		    <tr>
      		    <th></th>
      		    <th>グループ名</th>
      		    <th>紹介文</th>
      		    <th>メンバー</th>
      		    <th></th>
      		    <th colspan="3"></th>
      		  </tr>
    		  </thead>
  		    <tbody>
      		  <tr>
      		    <td><%= image_tag @group.get_group_image(50,50) %></td>
              <td><%= @group.name %></td>
              <td><%= @group.introduction %></td>
              <td>
                <% @users.each do |user| %>
                  <div>
                    <%= user.name %>
                  </div>
                <% end %>
              </td>
              <td>
                <% if @group.owner_id == current_user.id %>
                  <%= link_to "edit", edit_group_path(@group), class: "btn btn-sm btn-success" %>
                <% else %>
                  <% if @group.group_users.exists?(user_id: current_user.id) %>
                    <%= render 'leave', group: @group %>
                  <% else %>
                    <%= render 'join', group: @group %>
                  <% end %>
                <% end %>
              </td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>