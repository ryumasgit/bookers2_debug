<%= form_with url: group_join_path(group), method: :get, local:true do |f| %>
  <div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :group_id, value: group.id %>
  </div>
  <div class="form-group">
    <%= f.submit "Join this group", class: 'btn btn-sm btn-success' %>
  </div>
<% end %>