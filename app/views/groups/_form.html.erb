<%= form_with model: @group, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name, "グループ名", class: "text-dark" %>
    <%= f.text_field :name, class: "form-control name" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "紹介文", class: "text-dark" %>
    <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
  <div class="form-group">
    <%= f.label :image, "グループ画像", class: "text-dark" %>
    <%= f.file_field :group_image, class: "form-control-file user_image", accept: 'image/*' %>
  </div>
  <div>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-info' %>
  </div>
<% end %>